<div class="form-group">
  <%= f.label :emotion_id, "感情" %>
  <div id="emotion-display" class="mb-2"></div>
  <%= f.select :emotion_id, options_for_select(
    [["喜び", "喜び"], ["怒り", "怒り"], ["哀しみ", "哀しみ"], ["楽しさ", "楽しさ"], ["その他", "custom"]]
  ), { prompt: "感情を選択" }, { class: "form-control", id: "emotion_select" } %>
  
  <div id="custom_emotion_input" style="display: none;">
    <label for="custom_emotion">カスタム感情:</label>
    <%= text_field_tag "custom_emotion", nil, class: "form-control mt-2", placeholder: "感情を入力" %>
    
    <label for="emotion_bg_color">背景色を選択:</label>
    <%= select_tag "emotion_bg_color", options_for_select(
      [["喜び", "yellow"], ["怒り", "red"], ["哀しみ", "purple"], ["楽しさ", "green"], ["その他", "custom"]]
    ), class: "form-control mt-2", id: "emotion_bg_color_select" %>
    
    <div id="emotion_custom_bg_color" style="display: none;">
      <label for="custom_emotion_bg_color">カスタム背景色:</label>
      <%= color_field_tag "custom_emotion_bg_color", "#000000", class: "form-control mt-2" %>
    </div>

    <label for="emotion_text_color">文字色を選択:</label>
    <%= select_tag "emotion_text_color", options_for_select(
      [["赤", "red"], ["青", "blue"], ["黄色", "yellow"], ["緑", "green"], ["黒", "black"], ["白", "white"], ["その他", "custom"]]
    ), class: "form-control mt-2", id: "emotion_text_color_select" %>
    
    <div id="emotion_custom_text_color" style="display: none;">
      <label for="custom_emotion_text_color">カスタム文字色:</label>
      <%= color_field_tag "custom_emotion_text_color", "#FFFFFF", class: "form-control mt-2" %>
    </div>
  </div>

  <button type="button" id="add-emotion" class="btn btn-secondary mt-2">感情を追加</button>
</div>
