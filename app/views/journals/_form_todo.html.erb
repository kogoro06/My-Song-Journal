<div class="form-group">
  <%= f.label :todo, "To-Do" %>
  <div id="todo-list">
    <%= f.fields_for :todos do |todo_form| %>
      <div class="form-check">
        <%= todo_form.check_box :completed, class: "form-check-input" %>
        <%= todo_form.label :content, class: "form-check-label" %>
      </div>
    <% end %>
  </div>
  <%= f.text_field :new_todo, class: "form-control", placeholder: "新しいTo-Doを追加" %>
  <button type="button" id="add-todo" class="btn btn-secondary mt-2">To-Doを追加</button>
</div>
